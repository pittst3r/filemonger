{
  "compilerOptions": {
    "target": "es2015",
    "module": "commonjs",
    "moduleResolution": "node",
    "strict": true,
    "newLine": "LF",
    "noUnusedLocals": true,
    "declaration": true,
    "noEmitOnError": true,
    "outDir": "tmp",
    "experimentalDecorators": true
  },
  "include": ["src/**/*", "test/**/*"]
}
