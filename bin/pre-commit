#!/bin/sh

jsfiles=$(git diff --cached --name-only --diff-filter=ACM | grep '\.j\|tsx\?$' | tr '\n' ' ')
[ -z "$jsfiles" ] && exit 0

echo "$jsfiles" | xargs ./node_modules/.bin/prettier --write
echo "$jsfiles" | xargs ./node_modules/.bin/tslint --project ./ --fix

echo "$jsfiles" | xargs git add

exit 0
